- @members.each do |member|
  #chat-group-users
    #chat-group-user.chat-group-user.clearfix
      %input{ name: "chat_group[user_ids][]", type: "hidden", value: "#{member.id}"}/
      %p.chat-group-user__name
        = member.name
      %a.user-search-remove.chat-group-user__btn.chat-group-user__btn--remove.js-remove-btn.remove{ "data-user-id" => member.id, "data-user-name" => member.name} 削除
