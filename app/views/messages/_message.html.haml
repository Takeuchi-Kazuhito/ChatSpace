.main__body--messages-list{ "data-message-id": "#{message.id}"}
  .main__body--message.clearfix
    .main__body--message-name
      = message.user.name
    .main__body--message-time
      = message.created_at.strftime( "%Y/%m/%d %H:%M" )
    .main__body--message-body
      - if message.content.present?
        %p.lower-message__content
          = message.content
        = image_tag message.image, class: 'lower-message__image' if message.image.present?
